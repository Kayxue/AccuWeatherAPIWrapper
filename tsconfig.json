{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "src",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "declaration": true,
        "strict": false
    },
    "include": ["TypeScript/**/*"],
    "exclude": ["node_modules"]
}
